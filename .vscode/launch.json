{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (with breakpoints in windows)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/windows/rebound.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/windows",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug (with breakpoints in linux)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/linux/rebound",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/bin/linux",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "launchCompleteCommand": "exec-run",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
